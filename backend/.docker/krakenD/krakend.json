{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "Microservices API Gateway",
  "timeout": "10000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "host": ["http://krakend:8080"],
  "port": 8080,
  "endpoints": [
    {
      "endpoint": "/api/users",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/users",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": ["http://user-service:6001"],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/api/users/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/users/{id}",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": ["http://user-service:6001"],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/api/users",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/users",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": ["http://user-service:6001"],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/api/users/{id}",
      "method": "PUT",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/users/{id}",
          "encoding": "json",
          "sd": "static",
          "method": "PUT",
          "host": ["http://user-service:6001"],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/api/users/{id}",
      "method": "DELETE",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/users/{id}",
          "encoding": "json",
          "sd": "static",
          "method": "DELETE",
          "host": ["http://user-service:6001"],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/api/health",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/health",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": ["http://user-service:6001"],
          "disable_host_sanitize": false
        }
      ]
    }
  ],
  "extra_config": {
    "security/cors": {
      "allow_origins": ["*"],
      "allow_methods": ["GET", "HEAD", "POST", "PUT", "DELETE", "OPTIONS", "PATCH"],
      "allow_headers": ["Origin", "Authorization", "Content-Type", "Accept"],
      "expose_headers": ["Content-Length"],
      "max_age": "12h",
      "allow_credentials": false,
      "debug": false
    },
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    },
    "telemetry/metrics": {
      "collection_time": "60s",
      "proxy_disabled": false,
      "router_disabled": false,
      "backend_disabled": false,
      "endpoint_disabled": false,
      "listen_address": ":8090"
    }
  }
}